<head>
    <link rel="stylesheet" href="../public/Styles/login.css">
</head>
<body>
<%- include ('../partials/messages') %>

 <div class="container">
    <form action="/users/login" method="POST">
    <div class="login-box">
        <h2 class="login-title">blackJack Login</h2>
        <input class="login-input" type="text" name="email" id="email" placeholder="Email">
        <input class="login-input" type="password" name="password" id="password" placeholder="Enter Password">
        <div class="login-button-container">
            <p>Dont have an account? <a href="/users/register">Sign up</a></p>
            <button type="submit" class="login-button">Login</button>
        </div>
</form>
</body>