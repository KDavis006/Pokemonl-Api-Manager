<body>
  <head>
    <link rel="stylesheet" href="../public/styles/login.css">
  </head>


 <div class="container">
  <form action="/users/register" method="POST">
  <div class="login-box">
      <h2 class="login-title">BlackJack Sign up</h2>
      <%- include ('../partials/messages') %>

      <input class="login-input" type="text" name="username" id="username" placeholder="Enter Username" value="<%= typeof username != 'undefined' ? username : '' %>">
      <input class="login-input" type="text" name="email" id="email" placeholder="Enter Email" value="<%= typeof email != 'undefined' ? email : '' %>">
      <input class="login-input" type="password" name="password" id="password" placeholder="Enter Password" value="<%= typeof password != 'undefined' ? password : '' %>">
      <input class="login-input" type="password" name="password2" id="password2" placeholder="Confirm Password" value="<%= typeof password2 != 'undefined' ? password2 : '' %>">
      <div class="login-button-container">
          <p>Already have an account? <a href="/users/login">Log in</a></p>
          <button class="login-button">Sign up</button>
      </div>
  </div>
  </form>
</div>
</body>