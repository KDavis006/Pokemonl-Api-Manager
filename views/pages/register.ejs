<body>
  <head>
    <style>
body {
    background-image: linear-gradient(to bottom right, rgb(255, 255, 255), rgba(0, 119, 255, 0.849));
    overflow-y: hidden;
    height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
    /* flex-direction: column; */
}

/* Login box styling */
.login-box {
    background: #ffffff;
    border-radius: 5px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    padding: 1rem 1rem 2rem 1rem;
    width: 35rem;
    text-align: center;
}

/* Title styling */
.login-title {
    font-size: 2rem;
    margin-bottom: 20px;
    text-align: center;
    font-weight: bold;
}

/* Input field styling */
.login-input {
    text-align: center;
    width: 80%;
    padding: 10px;
    margin-bottom: 15px;
    border: 1px solid #ccc;
    border-radius: 3px;
    font-size: 16px;
}
.namers{
    width: 38%;
}

/* Login button styling */
.login-button {
    width: 10rem;
    background: #1d1d1d;
    color: #fff;
    padding: 10px;
    border: none;
    border-radius: 3px;
    cursor: pointer;
    background-color: rgba(0, 81, 255, 0.705);
    transition: 0.2s;
}
.login-button:hover{
    background-color: rgba(0, 81, 255, 0.829);
    transition: 0.2s;
}

/* Center the button */
.login-button-container {
    text-align: center;

}
a{
    color: rgb(0, 81, 255);
}
    </style>
  </head>

 <div class="container">
  <form action="/users/register" method="POST">
  <div class="login-box">
      <h2 class="login-title">Sign up</h2>
    <%- include ('../partials/messages') %>
      <input class="login-input" type="text" name="username" id="username" placeholder="Enter Username" value="<%= typeof username != 'undefined' ? username : '' %>">
      <input class="login-input" type="text" name="email" id="email" placeholder="Enter Email" value="<%= typeof email != 'undefined' ? email : '' %>">
      <input class="login-input" type="password" name="password" id="password" placeholder="Enter Password" value="<%= typeof password != 'undefined' ? password : '' %>">
      <input class="login-input" type="password" name="password2" id="password2" placeholder="Confirm Password" value="<%= typeof password2 != 'undefined' ? password2 : '' %>">
      <div class="login-button-container">
          <p>Already have an account? <a href="/users/login">Log in</a></p>
          <button class="login-button">Sign up</button>
      </div>
  </div>
  </form>
</div>
</body>